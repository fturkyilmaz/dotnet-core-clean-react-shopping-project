                        "url": {
                            "raw": "{{baseUrl}}/api/v{{apiVersion}}/Identity/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v{{apiVersion}}",
                                "Identity",
                                "register"
                            ]
